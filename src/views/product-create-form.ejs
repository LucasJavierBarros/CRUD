<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/store" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input  type="text" id="name" name="name" value="<%= locals.old && old.name ? old.name : null  %>" placeholder="Ej: Zapatillas Reebok" class="form-input">
						<% if (locals.errors && errors.name) { %>
							<small class="error"><%= errors.name.msg %> </small>
						<% } %> 	 
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= locals.old && old.price ? old.price : null  %>" placeholder="Ej: 5678" class="form-input">
						<small class="error"><%= locals.errors && errors.price ? errors.price.msg : null %> </small>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" value="<%= locals.old && old.discount ? old.discount : null  %>" class="form-input">
						<small class="error"><%= locals.errors && errors.discount ? errors.discount.msg : null %> </small>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="in-sale" <%= locals.old && old.category && old.category === "in-sale" ? 'selected' : null %>>En oferta</option>
							<option value="visited" <%= locals.old && old.category && old.category === "visited" ? 'selected' : null %>>Últimos agregados</option>
						</select>
						<small class="error"><%= locals.errors && errors.category ? errors.category.msg : null %> </small>
					</div>
					<div class="col-12 col-md-6">
						<label for="imagen" class="form-label">Imagen:</label>
						<input type="file" id="imagen" name="imagen" class="form-control">
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= locals.old && old.description ? old.description : "" %></textarea>
						<small class="error"><%= locals.errors && errors.description ? errors.description.msg : null %>
					</div>
					
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>